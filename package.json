    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "security",
    "redirect",
    "firewall",
    "open-redirect",
    "vulnerability",
    "middleware",
    "express",
    "react",
    "browser-extension"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monizb/open-redirect-firewall.git"
  },
  "bugs": {
    "url": "https://github.com/monizb/open-redirect-firewall/issues"
  },
  "homepage": "https://github.com/monizb/open-redirect-firewall#readme",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.9",
    "@types/url-parse": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "url-parse": "^1.5.0"
  },
  "peerDependencies": {
    "express": "^4.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
